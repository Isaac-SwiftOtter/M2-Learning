<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="custom_order_data" type="Learning\OrderAttributes\Api\Data\OrderExtensionAttributeInterface"/>
    </extension_attributes>
    <extension_attributes for="Magento\Quote\Api\Data\CartInterface">
        <attribute code="custom_order_attributes" type="Learning\OrderAttributes\Api\Data\QuoteExtensionAttributeInterface">
            <join reference_table="learning_custom_order_attributes_definitions" reference_field="attribute_code" join_on_field="entity_id">
                <field>quote</field>
            </join>
        </attribute>
    </extension_attributes>
</config>